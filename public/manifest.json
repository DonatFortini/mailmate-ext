{
    "manifest_version": 3,
    "name": "MailMate (React)",
    "version": "1.0.0",
    "description": "Login + Accueil pour récupérer et envoyer des pièces jointes.",
    "permissions": [
        "storage",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "*://mail.google.com/*",
        "*://outlook.live.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "MailMate"
    },
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://mail.google.com/*",
                "*://outlook.live.com/*"
            ],
            "js": [
                "assets/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}