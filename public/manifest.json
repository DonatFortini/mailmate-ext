{
    "manifest_version": 3,
    "name": "MailMate",
    "version": "1.0.0",
    "description": "Votre assistant intelligent pour la gestion des emails.",
    "permissions": [
        "storage",
        "tabs",
        "scripting",
        "webRequest"
    ],
    "host_permissions": [
        "*://*.mail.google.com/*",
        "*://*.yahoo.com/*",
        "*://outlook.com/*",
        "*://*.outlook.com/*",
        "*://outlook.office.com/*",
        "*://outlook.live.com/*",
        "*://mail.outlook.com/*",
        "*://*.univ-corse.fr/*",
        "*://*.icloud.com/*",
        "*://*.protonmail.com/*",
        "*://*.zoho.com/*",
        "*://*.aol.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "MailMate"
    },
    "background": {
        "service_worker": "src/chrome/background.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.mail.google.com/*",
                "*://*.yahoo.com/*",
                "*://outlook.com/*",
                "*://*.outlook.com/*",
                "*://outlook.office.com/*",
                "*://outlook.live.com/*",
                "*://mail.outlook.com/*",
                "*://*.univ-corse.fr/*",
                "*://*.icloud.com/*",
                "*://*.protonmail.com/*",
                "*://*.zoho.com/*",
                "*://*.aol.com/*"
            ],
            "js": [
                "src/chrome/content.ts"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}